---
interface Props {
  value: number;
  maxValue: number;
  label: string;
}

const { value, maxValue, label } = Astro.props;

const numberFormatter = new Intl.NumberFormat("en-US", { notation: "compact" });
---

<div
  class="flex flex-col h-full items-center justify-end relative"
  style={`height: ${Math.floor((value * 100) / maxValue)}%;`}
>
  <p class="absolute -top-7 font-bold">{numberFormatter.format(value)}</p>
  <span
    class="bg-gradient-to-t from-violet-700 to-violet-500 w-5 rounded-full h-full"
  ></span>
  <p class="absolute -bottom-7">{label}</p>
</div>
